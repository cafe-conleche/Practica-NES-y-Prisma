generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}  

model Tenat{
  id Int @id @default(autoincrement())
  name String?
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  user User[]
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  name String?
  password String
  telephone String?
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  role Role @default(USER)
  tenatId Int
  tenat Tenat @relation(fields: [tenatId], references: [id])
}

enum Role{
  USER
  ADMIN
}
